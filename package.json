{
  "name": "frontend-components",
  "version": "1.0.0",
  "repository": "https://github.com/lunit-io/frontend-components.git",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "dev:insight-viewer-demo": "yarn workspace @lunit/insight-viewer-demo run dev",
    "build": "yarn workspaces foreach -ti run build",
    "build:insight-viewer": "yarn workspace @lunit/insight-viewer run build",
    "test": "yarn workspaces foreach -pi run test",
    "handbook:build": "yarn run doc",
    "doc": "yarn run build:insight-viewer && yarn workspaces foreach -pi run doc"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.8",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "@yarnpkg/pnpify": "^2.4.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.8",
    "node-filter-async": "^2.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
